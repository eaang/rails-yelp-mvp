<div class="headline d-flex justify-content-between align-items-center">
  <h1><%= @restaurant.name %></h1>
</div>
<hr>
<div>
<h2>Info</h2>
<p>Rating: <%= @restaurant.average_rating %> stars</p>
<p>Address: <%= @restaurant.address %></p>
<p>Phone Number: <%= @restaurant.phone_number %></p>
<p>Category: <%= @restaurant.category.capitalize %></p>
</div>
<hr>
<div class="restaurant d-flex justify-content-between">
<h2>Reviews</h2>
<a class="btn btn-outline-primary" type="button" href=<%= new_restaurant_review_path(@restaurant) %>>Review Restaurant</a>
</div>
<div>
<% @reviews.each do |review| %>
<div class="review d-flex flex-column">
<div class="review-rating align-self-end border-bottom"><%= review.rating %> stars</div>
<div class="review-content"><%= review.content %></div>
</div>
<% end %>
</div>