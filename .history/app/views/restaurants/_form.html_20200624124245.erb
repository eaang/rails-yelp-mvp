<%= simple_form_for(@restaurant) do |f| %>
<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, :class => 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :content %>
  <%= f.rich_text_area :content, :class => 'form-control' %>
</div>
<%= f.submit "Create Article", :class => 'btn btn-outline-dark' %>
<% end %>